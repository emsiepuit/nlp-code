
@{
    ViewBag.Title = "PosTagging";
    Layout = "~/Areas/AdminIT/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    </div>
                    <h2 class="panel-title">Nhập câu bình luận</h2>
                </header>
                <div class="panel-body">
                @using (Html.BeginForm("PosTagging", "ToolsTest", FormMethod.Post, new { @class = "form-horizontal form-bordered", enctype = "multipart/form-data" }))
                                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="inputPlaceholder">Nội dung bình luận</label>
                        <div class="col-md-9">
                            @Html.TextArea("Description", new { @class = "form-control", rows = 5, id = "Description" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button class="mb-xs mt-xs mr-xs btn btn-success" type="submit"><i class="fa fa-save"></i> Thực hiện</button>
                            <button type="reset" class="mb-xs mt-xs mr-xs btn btn-default"><i class="fa fa-refresh"></i> Làm mới</button>
                        </div>
                    </div>
                }
                </div>
            </section>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <div id="resultPostTag">
                    @Html.Action("LoadResufltPosTags", new{ text=""})
                </div>
                <div class="clearfix"></div>
                <div id="loadImage" class="hide text-center">
                    <img src="~/Content/images/loadingFlightDetails.gif" width="180" />
                    <span style="font-style:italic">Đang thực hiên phân tích...</span>
                </div>
            </section>
        </div>
    </div>
</div>

