@model IEnumerable<StudyDoIT.Models.NLP.KeyWord>

@{
    ViewBag.Title = "Ma trận tần suất từ";
    Layout = "~/Areas/AdminIT/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    </div>
                    <h2 class="panel-title">Load ma trận tần suất từ</h2>
                </header>
                <div class="panel-body">
                    @using (Html.BeginForm("MatrixCountWords", "TranningResuft", FormMethod.Post, new { @class = "form-horizontal form-bordered", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="inputPlaceholder">Chọn sản phẩm</label>
                            <div class="col-md-6">
                                @Html.DropDownList("GroupComentId", (SelectList)ViewBag.GroupComent, "Chọn sản phẩm", new { @class = "form-control", id = "GroupComentId" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="inputPlaceholder">Chọn nhóm từ khóa</label>
                            <div class="col-md-6">
                                @Html.DropDownList("GroupWordId", (SelectList)ViewBag.GroupWord, "Chọn nhóm từ khóa", new { @class = "form-control", id = "GroupWordId" })
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <div class="col-md-4">
                                <button type="submit" class="mb-xs mt-xs mr-xs btn btn-success"><i class="fa fa-search-plus"></i> Load chỉ số</button>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>

    @if (Model != null)
    {
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                </div>
                <h2 class="panel-title">Ma trận tần suất từ</h2>
            </header>
            <div class="panel-body">
                <table class="table table-bordered table-striped mb-none" id="datatable-tabletools"
                       data-swf-path="~/Areas/AdminIT/Content/vendor/jquery-datatables/extras/TableTools/swf/copy_csv_xls_pdf.swf">
                    <thead>
                        <tr>
                            <th>Từ khóa</th>
                            <th>1 điểm</th>
                            <th>2 điểm</th>
                            <th>3 điểm</th>
                            <th>4 điểm</th>
                            <th>5 điểm</th>
                            <th>Tổng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="gradeX">
                                <td>@Html.DisplayFor(modelItem => item.Word)</td>
                                <td>@Html.DisplayFor(modelItem => item.C1)</td>
                                <td>@Html.DisplayFor(modelItem => item.C2)</td>
                                <td>@Html.DisplayFor(modelItem => item.C3)</td>
                                <td>@Html.DisplayFor(modelItem => item.C4)</td>
                                <td>@Html.DisplayFor(modelItem => item.C5)</td>
                                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>
    }
</div>


